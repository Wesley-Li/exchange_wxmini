/* subpackages/other-user-goods/index.wxss */
@import "/template/login/index.wxss";

page {
  background: #f5f5f5;
}
page,view,image,input {
  display: block;
  box-sizing: border-box;
}

.header {
  padding: 32rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.header .search {
  position: relative;
  width: 650rpx;
  height: 66rpx;
}
.header .search input {
  border: 1rpx solid #e3e3e3;
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  padding-left: 60rpx; 
}
.header .search image {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 16rpx;
  right: 40rpx;
  z-index: 99;
}
.header .show-type {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.line {
  width: 100vw;
  height: 2rpx;
  background: #dfdfdf;
}
.filters {
  width: 100vw;
  height: 88rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
}
.filters .item {
  line-height: 88rpx;
}
.filters .active {
  color:#fa1e26;
}

.list2-box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.list2 {
  position: relative;
  display: flex;
  margin: 0;
  padding: 30rpx 60rpx;
  width: 100%;
  background: #fff;
  border-bottom: 1rpx solid #F3F3F3;
  overflow: hidden;
  flex-flow: column;
}
.list2 .list2-top {
  display: flex;
  width: 100%;
}
.list2 .img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.list2 .goods-info {
  padding-left: 18rpx;
  display: flex;
  width: 100%;
  height: 100%;
  flex-flow: column;
  justify-content: space-between;
}
.list2 .goods-info .title {
  font-size: 28rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: #333;
  line-height: 36rpx;
}
.list2 .goods-info .price {
  font-size: 30rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 500;
  color: #ED1616;
  line-height: 48rpx;
  text-align: right;
}
.list2 .goods-info .price .text1 {
  font-size: 26rpx;
  font-weight: 400;
  color: #000000;
}
.list2 .goods-info .price .text2 {
  font-size: 24rpx;
}
.list2 .goods-info .sellout {
  color: #FF3B30;
  /* position: absolute; */
  font-size:34rpx;
  font-weight: 600;
  right: 130rpx;
  bottom: 16rpx;
}
.list2 .buy-info {
  display: flex;
  padding-top: 30rpx;
  width: 100%;
  height: auto;
  justify-content: flex-end;
}
.list2 .buy-info .num {
  font-size: 24rpx;
  color: #999999;
}
.list2 .buy-info .car {
  width: 50rpx;
  height: 50rpx;
}
.list2 .buy-info .car-left {
  width: 50rpx;
  height: 50rpx;
}
.list2 .buy-info .handle-btn {
  margin-left: 20rpx;
  display: flex;
  width: 120rpx;
  height: 50rpx;
  font-size: 24rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: #666;
  background: #FFF;
  border: 1rpx solid #DDD;
  border-radius: 25rpx;
  justify-content: center;
  align-items: center;
}
.list2 .buy-info .delete-btn {
  color: #ED1616;
}
.no-more {
  width: 100%;
  padding: 15rpx 0;
  font-size: 26rpx;
  color: #999;
  border-bottom: 20rpx solid #F4F5F9;
  text-align: center;
}