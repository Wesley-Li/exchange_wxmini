<!--subpackages/friends/index.wxml-->
<view class="container">
  <view class="header-tabs">
    <view class="tabs-item {{tabKey == 0 && 'tabs-item-selected'}}" bindtap="onTabsClick" data-type="0">关注{{momentStats.following}}</view>
    <view class="tabs-item {{tabKey == 1 && 'tabs-item-selected'}}" bindtap="onTabsClick" data-type="1">粉丝{{momentStats.followers}}</view>
  </view>
  <view class="search">
    <input type="text" placeholder="输入搜索关键词" value="{{inputValue}}" bindinput="bindinput" bindconfirm="bindconfirm"></input>
    <image src="/images/icon/search.png" ></image>
    <div class="search-btn" bindtap="onSearch">搜索</div>
  </view>
  <view class="user-item" wx:for="{{friendList}}" wx:key="index" bindtap="onClickUserItem" data-id="{{item.id}}" data-both="{{item.both}}">
    <image class="user-avart" src="{{item.avatar}}" catchtap="onViewOtherInfo" data-id="{{item.id}}" />
    <view class="user-info">
      <text class="user-name">{{item.nick_name}}</text>
      <text class="user-desc">{{item.short_desc}}</text>
    </view>
    <view class="status-box" wx:if="{{tabKey == 0}}">{{item.both ? '互相关注' : '已关注'}}</view>
    <view class="status-box" wx:if="{{tabKey == 1}}" style="background: {{item.both ? '#F3F3F3' : '#FCCE09'}}" bindtap="onAttention" data-id="{{item.id}}" data-both="{{item.both}}">{{item.both ? '互相关注' : '回关'}}</view>
    <view class="private-chat" catchtap="onTalk" data-avatar="{{item.avatar}}" data-nickname="{{item.nick_name}}" data-id="{{item.id}}">私聊</view>
  </view>
  <mp-actionSheet bindactiontap="btnClick" show="{{showActionsheet}}" actions="{{groups}}" title="">
  </mp-actionSheet>
</view>
