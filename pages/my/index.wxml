        </navigator>
      </div>
      <navigator url="/subpackages/setting-info/index">
        <div class="set">设置</div>
      </navigator>
    </view>
    <view wx:if="{{apiUserInfoMap}}" class="userinfo">
      <image wx:if="{{apiUserInfoMap.avatar}}" class="userinfo-avatar" src="{{ apiUserInfoMap.avatar }}" background-size="cover"></image>
      <text class="userinfo-nickname" style="color: {{haslend && '#32CD32' || hasborrow && '#EE0000' || '#fff'}}">{{ apiUserInfoMap.nickName }}</text>
      <text wx:if="{{apiUserInfoMap.shortDesc}}" class="userinfo-shortDesc">{{ apiUserInfoMap.shortDesc }}</text>
      <div class="info-box">
        <div class="info-item">{{ apiUserInfoMap.genderName }}</div>
        <div class="info-item">{{ apiUserInfoMap.city }}</div>
        <div wx:if="{{apiUserInfoMap.collegeName}}" class="info-item">{{ apiUserInfoMap.collegeName }}</div>
        <div wx:else class="info-item" bindtap="onJump" data-type="set">+添加学校标签</div>
      </div>
    </view>
    <view wx:else class="userinfo" style="margin-bottom:50rpx;">
      <image class="userinfo-avatar" src="/images/nologin.png" background-size="cover"></image>
      <button class="weui-btn mini-btn" plain="true" size="mini" bindtap="goLogin">立即登录</button>
    </view>
    <div class="header-data-box">
      <!-- <div class="data-item">
